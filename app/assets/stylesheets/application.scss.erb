//VERSION DE PRUEBA
.trivial-version {
    background-color: #d41454;
    text-align: right;
    color: white;
    padding: .25em .5em;
    font-size: 12px;
    font-weight: bold;
    position: absolute;
    right: 0;

    i {
      display: inline-block;
      padding-left: .5em;
      line-height: 1.4;
    }
}

//


// LOGIN
.login-button{
  text-align: center;
  vertical-align: middle;
  background-color: #046FDB;
  border: 2px solid #046FDB;
  border-radius: 0em;
  padding: 1em 4em 1em 4em;
  color: white;
  font-weight: bold;
  &:hover{
    border: 2px solid #046FDB;
    color:white;
    background-color: rgba(255, 255, 255, 0);
  }
}

a.forgot_password {
  text-align: center;
  vertical-align: middle;
  background-color: #ff5253;
  border: 2px solid #ff5253;
  border-radius: 0em;
  padding: 1.1em 3.4em 1.1em 3.4em;
  color: white;
  font-weight: bold;
  text-decoration: none;
  &:hover{
    background-color: rgba(255, 255, 255, 0);
  }
}

.login-background {
  top: 0;
  left: 0;
  min-width: 100%;
  min-height: 100%;

  &:before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: url("<%= asset_path("buenosaires_blue_background.jpg") %> ");
    /*background-image: linear-gradient(to bottom right, #FFFCBF, #03D6D2, #062D92 );*/
    /*opacity: .6;*/
    background-repeat: no-repeat;
    background-size: cover;
    /*-webkit-filter: grayscale(0) blur(6px);*/
  }
}

