@import "bootstrap-sprockets";
@import "bootstrap";

//navbar-fixed-top will overlay the other content, unless you add padding
body { 
  background-color: #f5f8fa;
}

.crud-page-header{
  margin-top: 250px;
  }


//VERSION DE PRUEBA
.trivial-version {
  background-color: #d41454;
  text-align: right;
  color: white;
  padding: .25em .5em;
  font-size: 12px;
  font-weight: bold;
  position: absolute;
  right: 0;
  top: 0;

  i {
    display: inline-block;
    padding-left: .5em;
    line-height: 1.4;
  }
}

//


// LOGIN
.jumbotron.session{
  background-color: rgba(89, 173, 235, 0.86);
}
.login-button{
  text-align: center;
  vertical-align: middle;
  background-color: #046FDB;
  border: 2px solid #046FDB;
  border-radius: 0em;
  padding: 1em 4em 1em 4em;
  color: white;
  font-weight: bold;
  &:hover{
    border: 2px solid #046FDB;
    color:white;
    background-color: rgba(255, 255, 255, 0);
  }
}

a.forgot_password {
  text-align: center;
  vertical-align: middle;
  background-color: #ff5253;
  border: 2px solid #ff5253;
  border-radius: 0em;
  padding: 1.1em 3.4em 1.1em 3.4em;
  color: white;
  font-weight: bold;
  text-decoration: none;
  &:hover{
    background-color: rgba(255, 255, 255, 0);
  }
}

.login-background {
  top: 0;
  left: 0;
  min-width: 100%;
  min-height: 100%;

  &:before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    //    background: url("<# asset_path('red-legislativa-ppal.jpg') %> ");
    background: url("<%= asset_path('red-legislativa.jpg') %>");
    /*background-image: linear-gradient(to bottom right, #FFFCBF, #03D6D2, #062D92 );*/
    /*opacity: .6;*/
    background-repeat: no-repeat;
    background-size: cover;
    /*-webkit-filter: grayscale(0) blur(6px);*/
  }
}

.jumbotron.session {
  margin-top: 100px;
}

// END LOGIN

// deluxe NAVBAR
.navbar-deluxe{
  background: url("<%= asset_path("header_gradient.png") %> ");
}
.menu{
  background-color: white;

  .menu-item {
    font-size: 1.3em;
    color: #1b95e0;
    text-align: center;
    border-left-style: solid;
    border-left-color: rgba(158, 158, 158, 0.7);
    border-left-width: 1px;
    border-bottom-style: solid;
    border-bottom-width: 1px;
    padding: 0.7em;
    width:  210px;

    .item-name{
      color: #1da1f2;
    }
    .item-name:hover, .item.name:link {
      background-color: white;
    }
  }
  .menu-item:hover {
    background-color: white;
    border-bottom-style: solid;
    border-bottom-width: 4px;
    border-bottom-color: #1da1f2;
  }
}





// end deluxe NAVBAR 


// public NAVBAR 
.navbar-gradient{
  background: #59adea;
  background: -webkit-linear-gradient(left, #59adea , rgba(220, 169, 22, 0.47));
  background: -o-linear-gradient(right, #59adea, rgba(220, 169, 22, 0.47));
  background: -moz-linear-gradient(right, #59adea, rgba(220, 169, 22, 0.47));
  background: linear-gradient(to right, #59adea , rgba(220, 169, 22, 0.47));
}

.user-content{
  margin-top: 130px;
}
//END NAVBAR

.page-header{
  font-size: 1.8em;
  font-weight: 200;
  color: #66757f;
  margin-bottom: 36px;
}

.input-text{
  margin-top: 2em;
  margin-bottom: 1.5em;
  padding: 1.7em;
}


.btn-submit, .btn-submit:hover{
  font-size: 14px;
  font-weight: bold;
  color: white;
  border: 1px solid #3b94d9;
  background-color: #50a5e6;
  border-radius: 0em;
  padding: 1em 4em 1em 4em;
}

// alert messages

.alert {
  background-color: white;
  border-color: white;
  padding: 10px;
  margin-bottom: 10px;
  margin-top: 10px;
}
.alert-danger{
  color: #c33;
  font-size: 0.9em;
}

// error messaged
.has-error .help-block, .has-error .control-label, .has-error .radio, 
.has-error .checkbox, .has-error .radio-inline, .has-error .checkbox-inline, 
.has-error.radio label, .has-error.checkbox label, .has-error.radio-inline label, 
.has-error.checkbox-inline label{
  color: #c33;
  font-size: 0.9em;
}

.has-error .form-control, .has-error .form-control:focus {
  box-shadow: 0 0 0 1px #dd2e44;
  border: 1px solid #dd2e44;
}

//devise SESSION LINKS
.session-links {
  margin-top: 20px;
}

.session-links a, .session-links a:hover{
  color: #333;
}

.session-links-light a, .session-links-light a:hover{
  color: white;
}
//END devise SESSION LINKS
