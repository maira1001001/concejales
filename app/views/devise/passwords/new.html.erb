<%= render 'top_bar_public' %>

<div class="row">
  <div class="col-md-7 col-md-offset-2">
    <div class="page-header"><%= t 'devise.passwords.new.title' %></div>
    <p><%= t 'devise.passwords.new.sub_title' %></p>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, placeholder: 'Email', label: false, input_html: { class: 'input-text' }  %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t('devise.passwords.new.submit'), class: 'btn-submit'%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
