<%= render 'top_bar_public' %>

<div class="row user-content">
  <div class="col-md-6 col-md-offset-2">
    <div class="page-header"><%= t 'devise.passwords.edit.title' %></div>
    <p><%= t 'devise.passwords.edit.sub_title' %></p>

    <%= simple_form_for(@user, url: password_path(@user), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden, input_html: { class: 'input-text' } %>
      <%= f.full_error :reset_password_token, input_html: { class: 'input-text' } %>

      <div class="form-inputs">
        <%= f.input :password, label: t('devise.passwords.edit.password_label'), required: true, autofocus: true, hint: (t('devise.passwords.edit.hint', length: @minimum_password_length) if @minimum_password_length), input_html: { class: 'input-text' }, label: false, placeholder: t('devise.passwords.edit.password_label') %>
        <%= f.input :password_confirmation, label: t('devise.passwords.edit.new_password_label'), required: true, input_html: { class: 'input-text' }, label: false, placeholder: t('devise.passwords.edit.new_password_label') %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t('devise.passwords.edit.change_password'), class: 'btn-submit' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
