<h2><%= t '.title', default: t('views.users.password.edit.title') %></h2>
<div class="row">
  <div class="col-md-8 col-md-offset-1">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password, label: t('devise.passwords.password_label'), required: true, autofocus: true, hint: (t('devise.passwords.hint', length: @minimum_password_length) if @minimum_password_length) %>
        <%= f.input :password_confirmation, label: t('devise.passwords.new_password_label'), required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t('devise.passwords.change_password') %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
