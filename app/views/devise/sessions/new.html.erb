<div class="login-background"></div>
<div class="col-md-12">
  <div class="jumbotron session">
    <div class="row">
      <div class="col-md-6">
        <div class="logo text-center">
          <%= image_tag 'sistema-integral-logo2.png', alt: 'Logo Proyecto integral Municipal', width: '350', height: 'auto' %>
        </div>
      </div>

      <div class="col-md-6 well">
        <h2><%#= t 'devise.sessions.new.title' %></h2> 
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1"><%= icon('envelope')%></span>
              <%= f.input :email, required: false, autofocus: true, value: params[:email], class: 'form-control', placeholder: 'Email', 'aria-describedby': 'basic-addon1', label: false %>
            </div>
             <div class="input-group">
              <span class="input-group-addon" id="basic-addon1"><%= icon('lock')%></span>
              <%= f.input :password, required: false, autofocus: true, class: 'form-control', placeholder: 'ContraseÃ±a', 'aria-describedby': 'basic-addon1', label: false %>
            </div>
          </div>
          <div class="form-actions">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to t('devise.links.forgot_password'), new_password_path(resource_name), class: 'forgot_password' %>
            <% end -%>
            <%= f.button :submit, t('devise.sessions.new.submit'), class: 'login-button' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>