<div class="row"> 
  <div class="col-md-5 col-md-offset-3">
    <div class="logo text-center">
      <%= image_tag("pueblo-logo.png", alt:"Logo Cristina es Pueblo", width: '380', height: '180')%>
    </div>
  </div>
  <div id="sign-in" class="row">
    <div class="col-md-4 well well-lg col-md-offset-4">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.input :username, label: false, input_html: {placeholder: t('activerecord.attributes.user.username'), class: 'text-center'} %>
        <%= f.input :password, label: false, input_html: {placeholder: t('activerecord.attributes.user.password'),  class: 'text-center'} %>
        <div class="form-actions">
          <%= f.button :submit, t('session.login.submit'), class: 'btn btn-primary btn-sign-in' %>
        </div>
        <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
<% end %>
</div>


<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
