<div class="col-md-5 col-md-offset-3">
  <div class="logo text-center">
    <%= image_tag 'sistema-integral-logo.png', alt: 'Logo Proyecto integral Municipal', width: '600', height: '200' %>
  </div>
</div>

<div class="login-background"></div>
<div class="">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 well">
      <h2><%= t '.title', default: t('views.users.sign_in.title') %></h2> 
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, value: params[:email] %>
          <%= f.input :password, required: false %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t('views.users.sign_in.title'), class: 'login-button' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
