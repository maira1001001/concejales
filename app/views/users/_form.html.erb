<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6">
        <%= f.input :username %>
      </div>
      <div class="col-md-6">   
        <%= f.input :roles %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
