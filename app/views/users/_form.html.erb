<%= simple_form_for(@user) do |f| %>
  <!-- Google Chrome form autocomplete buster -->
  <input type="password" style="display:none;">

  <%= f.error_notification %>
  <div class="row">
    <%= f.input :username, autofocus: true, wrapper_html: { class: 'col-md-4'  }  %>
    <%= f.input :email, wrapper_html: { class: 'col-md-4'  }  %>
  </div>
  <div class="row">
    <%= f.input :password, autocomplete: "off",
      label: t('activerecord.attributes.user.password'),
      wrapper_html: { class: 'col-md-4'  }  %>
    <%= f.input :password_confirmation, autocomplete: "off",
      label: t('activerecord.attributes.user.password_confirmation'),
      wrapper_html: { class: 'col-md-4'  } %>
</div>
<% @user.errors[:role].each do |message| %>
  <p class="text-danger"><%= message %></p>
<% end %>

<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-success',
    value: t('.submit', default: t('global.form.actions.submit')) %>
  </div>

<% end %>

