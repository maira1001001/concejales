<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <%= f.input :email, wrapper_html: { class: 'col-md-6'  }  %>
    <%= f.input :roles, as: :select, collection: ['Administrador', 'Concejal'],
      wrapper_html: { class:' col-md-6' }%>
  </div>
  <div class="row">
    <%= f.simple_fields_for :person do |p| %>
      <%= p.input :name, wrapper_html: { class: 'col-md-4' }  %>
      <%= p.input :last_name, wrapper_html: { class: 'col-md-4' } %>
      <!-- p.input :current_district_id, as: :select2, collection: District.all,
        wrapper_html: { class: 'col-md-4' } -->
    <% end %>
  </div>

<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-success',
    value: t('.submit', default: t('global.form.actions.submit')) %>
  </div>

<% end %>

