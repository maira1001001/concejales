<%= render partial: 'page_header', locals: { title: t('users.new.title'), sub_title: 'Ingrese los datos que se solicitan para invitar al usuario al sistema. Luego, el usuario debe recibir un email y confirmar su participaciÃ³n en el sistema.' } %>

<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <%= f.input :email, wrapper_html: { class: 'col-md-6'  }  %>
    <%= f.input :role, as: :enum, wrapper_html: { class:' col-md-6' }%>
  </div>
  <div class="row">
    <%= f.input :name, wrapper_html: { class: 'col-md-6' }  %>
    <%= f.input :last_name, wrapper_html: { class: 'col-md-6' } %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success',
      value: t('.submit', default: t('global.form.actions.submit')) %>
  </div>

<% end %>

