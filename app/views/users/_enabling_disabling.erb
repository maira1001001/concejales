<% if user.enabled? || user.pending_invitation? -%>
  <%= link_to(icon('ok-circle'), disable_user_path(user),
              method: :post,
              title: t('users.index.tooltip.enabled'),
              data: {
                confirm: t('users.index.confirm.disable', email: user.email),
                toggle: 'tooltip',
                placement: 'left'
              }) %>
<%- else -%>
  <%= link_to(icon('ban-circle'), enable_user_path(user),
              method: :post,
              title: t('users.index.tooltip.disabled'),
              data: {
                confirm: t('users.index.confirm.enable', email: user.email),
                toggle: 'tooltip',
                placement: 'left'
              }) %>
<%- end -%>
