<div class="page-header crud-page-header">
  <div class="row">
    <h2 class="col-md-8">
      <%- if defined? alt_title -%>
        <%= title %>
        <%- content_for(:title, alt_title) -%>
      <%- else -%>
        <%= title.tap { |t| content_for(:title, t) } %>
      <%- end -%>
    </h2>
  </div>
  <div class="row">
    <h2 class="col-md-8">
      <%- if defined? sub_title -%>
        <small><%= sub_title %></small>
      <%- end -%>
    </h2>
  </div>
  <div class="col-md-4 text-right">
    <%= yield :filter_form %>
  </div>
</div>
