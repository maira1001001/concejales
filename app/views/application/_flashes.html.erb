<div class="flashes">
  <%- flash.each do |name, msg| %>
    <%=  content_tag :div, class: "alert alert-#{flash_type(name)} alert-dismissible fade in", role: "alert" do %>
      <div class="container">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= flash_icon(name) %>
        <%= msg%>
      </div>
    <% end -%>
  <% end -%>
</div>

