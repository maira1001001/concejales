<div class="row">
  <div class="col-md-6">
    <h3><%= t 'charges.show.projects.title' %></h3>
  </div>
  <div class="col-md-4">
    <div class="btn-group">
      <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <%= t 'projects.new.title' %>
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><%= link_to t('views.navbar.project_types.ordinance'), new_project_path(project_type: :ordinance) %></li>
        <li><%= link_to t('views.navbar.project_types.decree'),  new_project_path(project_type: :decree) %></li>
        <li><%= link_to t('views.navbar.project_types.resolution'), new_project_path(project_type: :resolution) %></li>
        <li><%= link_to t('views.navbar.project_types.communication'),  new_project_path(project_type: :communication) %></li>
      </ul>
    </div>
  </div>
</div>

<div class="row">
  <% if projects.blank? %>
    <div class="alert alert-warning">
      <%= t('charges.show.projects.empty_list') %>
    </div>
  <% else %>
    <%= render partial: 'projects/projects', projects: @charge.projects %>
  <% end %>
</div>






