<div class="page-header">
  <div class="row">
    <div class="col-md-7">
      <h1><%= t '.title'  %></h1>
    </div>
    <div class="col-md-5">
      <div class="header-actions">
        <%= link_to new_test_path,
          class: 'btn btn-primary' do %>
          <%= icon 'plus'  %>
          <%= t "tests.actions.new" %>
          <% end %>
      </div>
    </div>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
                  <th><%= t "activerecord.attributes.test.Name" %></th>
                  <th><%= t "activerecord.attributes.test.Age" %></th>
                <th><%= t 'global.index.actions' %></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @tests) do |test| %>
                  <td><%= test.name %></td>
                  <td><%= test.age %></td>
                <td>
          <%= link_to icon('eye-open'), test,
            class: 'btn btn-xs btn-default',
            title: t('tests.actions.show', default: t('global.actions.show')),
            data: { toggle: 'tooltip', container: 'body', placement: 'left' } %>
          <%= link_to icon('pencil'), edit_test_path(test),
            class: 'btn btn-xs btn-primary',
            title: t('tests.actions.edit', default: t('global.actions.edit')),
            data: { toggle: 'tooltip', container: 'body', placement: 'left' } %>
          <%= link_to icon('trash'), test,  method: :delete,
            class: 'btn btn-xs btn-danger',
            title: t('tests.actions.destroy', default: t('global.actions.destroy')),
            data: { confirm: t('tests.actions.confirm_destroy', default: t('global.actions.confirm_destroy')), toggle: 'tooltip', container: 'body', placement: 'left' } %>
      </td>
      <% end %>
    </tbody>

  </table>
</div>
