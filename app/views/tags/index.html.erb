<div class="page-header">
  <div class="actions">
    <%= link_to new_tag_path, class: 'btn btn-primary' do %>
      <%= icon 'plus' %>
      <%= t 'tags.actions.new' %>
    <% end %>
  </div>
  <h1><%= t '.title'  %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th><%= t 'activerecord.attributes.tag.name' %></th>
      <th><%= t 'global.index.actions'  %></th>
    </tr>
    </thead>

    <tbody>
    <%= content_tag_for(:tr, @tags) do |tag| %>
      <td><%= tag.name %></td>
      <td>
        <%= link_to icon('search'), tag,
                    title: t('global.actions.show') ,
                    data: { toggle: 'tooltip', placement: 'right' } %>
        <%= link_to icon('pencil'), edit_tag_path(tag),
                    title: t('global.actions.edit'),
                    data: { toggle: 'tooltip', placement: 'right' } %>
        <%= link_to icon('trash'), tag_path(tag), method: :delete,
                    title: t('global.actions.destroy'),
                    data: { toggle: 'tooltip', placement: 'right', confirm: t('projects.actions.confirm_destroy')} %>
      </td>
    <% end %>
    </tbody>
  </table>
</div>
