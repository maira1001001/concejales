<%= simple_form_for(@tag) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <%= f.input :name, wrapper_html: { class: 'col-md-8' } %>
  </div>
  <div class="form-actions">
    <%= f.submit class: "btn btn-success", value: t('.submit', default: t('global.form.actions.submit') )  %>
  </div>
<% end %>