<div class="page-header">
  <%= link_to projects_path, class: 'btn btn-default' do %>
    <%= icon('list-alt') %>
    <%= t 'global.actions.back' %>
  <% end %>
  <%= link_to edit_project_path(@project), class: 'btn btn-primary' do %>
    <%= icon('info-sign') %>
    <%= t 'global.actions.edit' %>
  <% end %>
  <h1><%= t '.title' %></h1>
</div>


<dl class="dl-horizontal">

  <dt><%= t 'activerecord.attributes.project.title' %></dt>
  <dd><%= @project.title %></dd>

  <dt><%= t 'activerecord.attributes.project.description' %></dt>
  <dd><%= @project.description %></dd>

  <dt><%= t 'activerecord.attributes.project.category' %></dt>
  <dd><%= t_enum @project, :category %></dd>

  <dt><%= t 'activerecord.attributes.project.project_type' %></dt>
  <dd><%= t_enum @project, :project_type %></dd>


  <dt><%= t 'activerecord.attributes.project.project_files' %></dt>
  <dd><%= content_tag_for :ul, @project.project_files do |file| %>
    <li><%= file.name %></li>
  <% end %>
  </dd>


</dl>
