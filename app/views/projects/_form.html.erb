<div class="row">
  <%= simple_nested_form_for(@project) do |f| %>
    <%= f.error_notification %>

    <div class="row">
      <%= f.input :title, wrapper_html: { class: 'col-md-4' } %>
      <%= f.input :district, wrapper_html: { class: 'col-md-4' } %>
      <%= f.input :dossier %>
    </div>
    <%= f.input :description, wrapper_html: { class: 'row' } %>
    <%= f.simple_fields_for :project_files do |b| %>
      <%= b.input :name, wrapper_html: { class: 'col-md-6' } %>
      <%= b.input :file, wrapper_html: { class: 'col-md-6' } %>
      <%= b.link_to_remove class: 'btn btn-xs btn-danger',
        data: { toggle: 'tooltip', container: 'body' }, 
        title: t('.destroy', destroy: t('global.actions.destroy')) do %>
        <%= icon 'trash' %>
      <% end %>
    <% end %>


    <%= f.link_to_add icon('plus'), :activities, class: 'btn btn-success',
      title: t('global.tooltip.add'), data: { toggle:'tooltip', placement:'right'  } %>

    <div class="form-actions">
      <%= f.submit class: "btn btn-success",
        value: t('.submit', default: t('global.form.actions.submit') )  %>
  </div>

<% end %>
</div>